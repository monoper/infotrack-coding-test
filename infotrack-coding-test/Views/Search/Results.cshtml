@model infotrack_coding_test.Models.ResultsViewModel

<div class="row">
    <div class="col-md-6 col-xs-3">
        <label class="control-label" for="SearchUrl">Search URL</label>
        <input asp-for="SearchUrl" class="form-control" disabled readonly/>
    </div>
    <div class="col-md-6 col-xs-3">
        <label class="control-label" for="Keywords">Keywords</label>
        <input asp-for="Keywords" class="form-control" disabled readonly/>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="/" type="submit" class="btn btn-primary full-width">Perform Another Search</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if(Model.SearchPositions.Any())
        {
            <table class="full-width table-centered">
                <thead>
                    <tr>
                        <th>
                            <label class="control-label">Position in Search Results</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var position in Model.SearchPositions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => position)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                <p>There are no results to display</p>
            </div>
        }
    </div>
</div>
